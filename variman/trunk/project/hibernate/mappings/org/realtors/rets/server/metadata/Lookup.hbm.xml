<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: Lookup.hbm.xml,v 1.3 2003/06/12 20:55:44 kgarner Exp $ -->

<hibernate-mapping>

  <class name="org.realtors.rets.server.metadata.MetadataLookup"
         table="rets_metadata_lookup">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <many-to-one name="resourceid" cascade="none"
                 class="org.realtors.rets.server.metadata.MetadataResource"/>

    <property name="lookupName" type="string">
      <column name="lookup_name" length="32" unique="true" not-null="true"
              index="rets_metadata_lookup_lookupname_index"/>
    </property>

    <property name="visibleName" type="string">
      <column name="visible_name" length="32"/>
    </property>

    <property name="version" type="string">
      <column name="version" length="11"/>
    </property>

    <property name="date" type="date">
      <column name="rdate"/>
    </property>

    <set name="lookupTypes" inverse="true">
      <key column="lookupid"/>
      <one-to-many
                 class="org.realtors.rets.server.metadata.MetadataLookupType"/>
    </set>

  </class>
</hibernate-mapping>
