<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: MetadataObject.hbm.xml,v 1.4 2003/06/04 20:32:45 kgarner Exp $ -->

<hibernate-mapping>
  <class name="org.nar.rets.metadata.newdb.MetadataObject"
    table="rets_metadata_object">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <many-to-one name="resourceid" cascade="none"
      class="org.nar.rets.metadata.newdb.MetadataResource"/>

    <property name="objectType"
      type="org.nar.rets.metadata.newdb.ObjectTypeEnum">
      <column name="object_type" index="rets_metadata_objectype_index"/>
    </property>

    <property name="mimeType" type="string">
      <column name="mime_type" length="24"/>
    </property>

    <property name="visibleName" type="string">
      <column name="visible_name" length="32"/>
    </property>

    <property name="description" type="string">
      <column name="description" length="64"/>
    </property>

  </class>
</hibernate-mapping>
