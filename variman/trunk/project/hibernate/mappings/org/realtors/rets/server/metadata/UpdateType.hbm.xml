<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: UpdateType.hbm.xml,v 1.4 2003/06/04 20:32:45 kgarner Exp $ -->

<hibernate-mapping>
  <class name="org.nar.rets.metadata.newdb.MetadataUpdateType"
    table="rets_metadata_updatetype">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <many-to-one name="updateid" cascade="none"
      class="org.nar.rets.metadata.newdb.MetadataUpdate"/>

    <property name="systemName" type="string">
      <column name="system_name" length="32" not-null="true" unique="true"
        index="updatetype_system_name_index"/>
    </property>

    <property name="sequence" type="int"/>

    <set name="attributes" table="rets_metadata_updatetype_attributes">
      <key column="id"/>
      <element column="attributes"
        type="org.nar.rets.metadata.newdb.UpdateTypeAttributeEnum"/>
    </set>

    <property name="Default" type="string">
      <column name="r_default"/>
    </property>

    <set name="validationExpressions"
      table="rets_metadata_updatetype_validationexpressions">
      <key column="id"/>
      <one-to-many
        class="org.nar.rets.metadata.newdb.MetadataValidationExpression"/>
    </set>

    <many-to-one name="updateHelp" cascade="none"
      class="org.nar.rets.metadata.newdb.MetadataUpdateHelp"/>

    <many-to-one name="validationLookup" cascade="none"
        class="org.nar.rets.metadata.newdb.MetadataValidationLookup"/>
    
    <many-to-one name="validationExternal" cascade="none"
        class="org.nar.rets.metadata.newdb.MetadataValidationExternal"/>
    
  </class>
</hibernate-mapping>
    
