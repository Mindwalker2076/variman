<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
  <appender name="stdout" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="${variman.log.home}/variman_webapp.txt"/>
    <param name="DatePattern" value=".yyyy-ww"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
             value="%d{DATE} %-5p [%X{addr} %X{user}] %c%n-> %m%n"/>
    </layout>
  </appender>

  <appender name="sql_log" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="${variman.log.home}/sql_log.txt"/>
    <param name="DatePattern" value=".yyyy-ww"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
             value="%d{DATE} User: %X{user} User-Agent: %X{user-agent} %m%n"/>
    </layout>
  </appender>

  <logger name="org.realtors.rets.server">
    <level value="${variman.log.level}"/>
  </logger>

  <logger name="org.realtors.rets.server.sql_log">
    <level value="${variman.log.sql_level}" />
    <appender-ref ref="sql_log" />
  </logger>

  <root>
    <level value="warn"/>
    <appender-ref ref="stdout"/>
  </root>
</log4j:configuration>
