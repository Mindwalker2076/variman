<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: UpdateType.hbm.xml,v 1.6 2003/06/19 20:20:52 kgarner Exp $ -->

<hibernate-mapping>
  <class name="org.realtors.rets.server.metadata.UpdateType"
         table="rets_metadata_updatetype">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <many-to-one name="updateid" cascade="none"
                 class="org.realtors.rets.server.metadata.Update"/>

    <property name="systemName" type="string">
      <column name="system_name" length="32" not-null="true" unique="true"
              index="updatetype_system_name_index"/>
    </property>

    <property name="sequence" type="int"/>

    <set name="attributes" table="rets_metadata_updatetype_attributes">
      <key column="id"/>
      <element column="attributes"
             type="org.realtors.rets.server.metadata.UpdateTypeAttributeEnum"/>
    </set>

    <property name="Default" type="string">
      <column name="r_default"/>
    </property>

    <set name="validationExpressions"
         table="rets_metadata_updatetype_validationexpressions">
      <key column="id"/>
      <one-to-many
       class="org.realtors.rets.server.metadata.ValidationExpression"/>
    </set>

    <many-to-one name="updateHelp" cascade="none"
                 class="org.realtors.rets.server.metadata.UpdateHelp"/>

    <many-to-one name="validationLookup" cascade="none"
           class="org.realtors.rets.server.metadata.ValidationLookup"/>
    
    <many-to-one name="validationExternal" cascade="none"
         class="org.realtors.rets.server.metadata.ValidationExternal"/>
    
  </class>
</hibernate-mapping>
    
