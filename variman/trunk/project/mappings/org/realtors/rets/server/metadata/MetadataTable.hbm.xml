<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: MetadataTable.hbm.xml,v 1.8 2003/06/12 20:55:45 kgarner Exp $ -->

<hibernate-mapping>
  <class name="org.realtors.rets.server.metadata.MetadataTable"
         table="rets_metadata_table">
    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <many-to-one name="classid" cascade="none"
                 class="org.realtors.rets.server.metadata.MetadataClass"/>

    <property name="systemName" type="string">
      <column name="system_name" length="32" not-null="true" unique="true"
              index="table_system_name_index"/>
    </property>

    <!-- this should probably become an enum after consluting the DTD -->
    <property name="standardName" type="string"/>

    <property name="longName" type="string">
      <column name="long_name" length="32"/>
    </property>

    <property name="DBName" type="string">
      <column name="dbname" length="10"/>
    </property>

    <property name="shortName" type="string">
      <column name="short_name" length="24"/>
    </property>

    <property name="dataType"
              type="org.realtors.rets.server.metadata.DataTypeEnum"/>

    <property name="precision" type="int"/>

    <property name="searchable" type="boolean"/>

    <property name="interpretation"
              type="org.realtors.rets.server.metadata.InterpretationEnum"/>

    <property name="alignment"
              type="org.realtors.rets.server.metadata.AlignmentEnum"/>

    <property name="useSeparator" type="boolean"/>

    <many-to-one name="editMask" cascade="none"
                 class="org.realtors.rets.server.metadata.MetadataEditMask"/>

    <many-to-one name="lookup" cascade="none"
                 class="org.realtors.rets.server.metadata.MetadataLookup"/>

    <property name="maxSelect" type="int"/>

    <property name="units" type="org.realtors.rets.server.metadata.UnitEnum"/>

    <property name="index" type="int"/>

    <property name="minimum" type="int"/>

    <property name="maximum" type="int"/>

    <property name="Default" column="r_default" type="int"/>

    <property name="required" type="int"/>

    <many-to-one name="searchHelp" cascade="none"
                 class="org.realtors.rets.server.metadata.MetadataSearchHelp"/>

    <property name="unique" column="r_unique" type="boolean"/>
    
  </class>
</hibernate-mapping>
