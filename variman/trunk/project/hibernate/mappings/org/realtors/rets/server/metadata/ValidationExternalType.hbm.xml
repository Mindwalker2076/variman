<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: ValidationExternalType.hbm.xml,v 1.3 2003/06/12 20:55:45 kgarner Exp $ -->

<hibernate-mapping>

  <class table="rets_metadata_validationexternaltype"
       name="org.realtors.rets.server.metadata.MetadataValidationExternalType">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <many-to-one name="validationExternalID" cascade="none"
         class="org.realtors.rets.server.metadata.MetadataValidationExternal"/>

    <set name="searchField" table="rets_validationexternaltype_searchfield">
      <key column="id"/>
      <one-to-many class="org.realtors.rets.server.metadata.MetadataTable"/>
    </set>

    <set name="displayField" table="rets_validationexternaltype_displayfield">
      <key column="id"/>
      <one-to-many class="org.realtors.rets.server.metadata.MetadataTable"/>
    </set>

    <map name="resultFields" table="rets_validationexternaltype_resultfields">
      <key column="id"/>
      <index-many-to-many column="key"
                      class="org.realtors.rets.server.metadata.MetadataTable"/>
      <many-to-many column="value"
                    class="org.realtors.rets.server.metadata.MetadataTable"/>
    </map>

  </class>
</hibernate-mapping>
