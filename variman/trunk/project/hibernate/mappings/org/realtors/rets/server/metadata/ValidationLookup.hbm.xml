<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: ValidationLookup.hbm.xml,v 1.4 2003/06/12 20:55:45 kgarner Exp $ -->

<hibernate-mapping>

  <class name="org.realtors.rets.server.metadata.MetadataValidationLookup"
         table="rets_metadata_validationlookup">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <many-to-one name="resourceid" cascade="none"
                 class="org.realtors.rets.server.metadata.MetadataResource"/>

    <property name="validationLookupName" type="string">
      <column name="validation_lookup_name" length="32" unique="true"
              not-null="true"
              index="rets_metadata_validationlookup_name_index"/>
    </property>

    <!-- should this be a pointer to tables? -->
    <property name="parent1Field" type="string">
      <column name="parent1field" length="32"/>
    </property>

    <property name="parent2Field" type="string">
      <column name="parent2field" length="32"/>
    </property>

    <property name="version" type="string">
      <column name="version" length="11"/>
    </property>

    <property name="date" type="date">
      <column name="rdate"/>
    </property>

    <set name="validationLookupTypes">
      <key column="validationLookupID"/>
      <one-to-many
       class="org.realtors.rets.server.metadata.MetadataValidationLookupType"/>
    </set>

  </class>
</hibernate-mapping>
