<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: ValidationExternalType.hbm.xml,v 1.1 2003/06/02 21:48:13 kgarner Exp $ -->

<hibernate-mapping>

  <class name="org.nar.rets.metadata.newdb.MetadataValidationExternalType"
    table="rets_metadata_validationexternaltype">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <set name="searchField" table="rets_validationexternaltype_searchfield">
      <key column="id"/>
      <one-to-many class="org.nar.rets.metadata.newdb.MetadataTable"/>
    </set>

    <set name="displayField" table="rets_validationexternaltype_displayfield">
      <key column="id"/>
      <one-to-many class="org.nar.rets.metadata.newdb.MetadataTable"/>
    </set>

    <map name="resultFields" table="rets_validationexternaltype_resultfields">
      <key column="id"/>
      <index-many-to-many column="key"
        class="org.nar.rets.metadata.newdb.MetadataTable"/>
      <many-to-many column="value"
        class="org.nar.rets.metadata.newdb.MetadataTable"/>
    </map>

  </class>
</hibernate-mapping>
