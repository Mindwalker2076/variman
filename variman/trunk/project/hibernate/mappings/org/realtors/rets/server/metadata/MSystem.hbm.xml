<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: MSystem.hbm.xml,v 1.4 2003/06/12 20:55:45 kgarner Exp $ -->

<hibernate-mapping>
  <class name="org.realtors.rets.server.metadata.MetadataSystem"
         table="rets_metadata_system">
    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <property name="systemID" type="string">
      <column name="system_id" length="10"/>
    </property>

    <property name="description" type="string">
      <column name="description" length="64"/>
    </property>

    <property name="comments" type="string"/>

    <property name="version" type="string">
      <column name="version" length="11"/>
    </property>
    
    <property name="date" type="date"/>

    <set name="resources" inverse="true">
      <key column="systemid"/>
      <one-to-many class="org.realtors.rets.server.metadata.MetadataResource"/>
    </set>

    <set name="foreignKeys" inverse="true">
      <key column="systemid"/>
      <one-to-many
                 class="org.realtors.rets.server.metadata.MetadataForeignKey"/>
    </set>
    
  </class>
</hibernate-mapping>
