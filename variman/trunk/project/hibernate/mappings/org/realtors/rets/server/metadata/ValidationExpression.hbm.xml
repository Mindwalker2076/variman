<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: ValidationExpression.hbm.xml,v 1.1 2003/06/02 21:48:13 kgarner Exp $ -->

<hibernate-mapping>

  <class name="org.nar.rets.metadata.newdb.MetadataValidationExpression"
    table="rets_metadata_validationexpression">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <property name="validationExpressionID" type="string">
      <column name="validation_expression_id" length="32" unique="true"
        not-null="true" index="rets_metadata_validationexpression_id_index"/>
    </property>

    <property name="validationExpression"
      type="org.nar.rets.metadata.newdb.ValidationExpressionTypeEnum"/>

    <property name="value" type="string">
      <column name="value" length="512"/>
    </property>

  </class>
</hibernate-mapping>
