<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: RETSData.hbm.xml,v 1.7 2003/06/09 18:05:27 kgarner Exp $ -->

<hibernate-mapping>
  <class name="org.nar.rets.data.RETSData" table="rets_data">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <!-- The class element -->
    <many-to-one name="clazz" cascade="none"
      class="org.nar.rets.metadata.newdb.MetadataClass">
      <column name="clazz" index="rets_data_clazz"/>
    </many-to-one>

    <map name="dataElements" lazy="false" cascade="all">
      <key column="data"/>
      <index-many-to-many column="key"
        class="org.nar.rets.metadata.newdb.MetadataTable"/>
      <one-to-many class="org.nar.rets.data.RETSDataElement"/>
    </map>
      
  </class>
</hibernate-mapping>
