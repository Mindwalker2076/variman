<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: ValidationExpression.hbm.xml,v 1.3 2003/06/12 20:55:45 kgarner Exp $ -->

<hibernate-mapping>

  <class name="org.realtors.rets.server.metadata.MetadataValidationExpression"
         table="rets_metadata_validationexpression">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <many-to-one name="resourceid" cascade="none"
                 class="org.realtors.rets.server.metadata.MetadataResource"/>

    <property name="validationExpressionID" type="string">
      <column name="validation_expression_id" length="32" unique="true"
              not-null="true"
              index="rets_metadata_validationexpression_id_index"/>
    </property>

    <property name="validationExpression"
        type="org.realtors.rets.server.metadata.ValidationExpressionTypeEnum"/>

    <property name="value" type="string">
      <column name="value" length="512"/>
    </property>

  </class>
</hibernate-mapping>
