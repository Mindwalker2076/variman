<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<!-- $Id: MObject.hbm.xml,v 1.7 2003/06/19 21:53:41 kgarner Exp $ -->

<hibernate-mapping>
  <class name="org.realtors.rets.server.metadata.MObject"
         table="rets_metadata_object">

    <id name="id" type="long">
      <generator class="hilo"/>
    </id>

    <many-to-one name="resourceid" cascade="none"
                 class="org.realtors.rets.server.metadata.Resource"/>

    <property name="objectType"
              type="org.realtors.rets.server.metadata.ObjectTypeEnum">
      <column name="object_type" index="rets_metadata_objectype_index"/>
    </property>

    <property name="mimeType" type="string">
      <column name="mime_type" length="24"/>
    </property>

    <property name="visibleName" type="string">
      <column name="visible_name" length="32"/>
    </property>

    <property name="description" type="string">
      <column name="description" length="64"/>
    </property>

    <!-- a solution to the ipix integration? -->
<!--     <property name="x-storedBy" type="string"/> -->

  </class>
</hibernate-mapping>
